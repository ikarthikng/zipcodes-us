{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "sourceMap": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
